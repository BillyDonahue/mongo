# -*- mode: python -*-

Import("env")
Import("has_option")
Import("debugBuild")

env = env.Clone()

lib_root = env.Dir(".").srcnode()

env.Append(
    CPPPATH=[
        unwind_platform.Dir("build/include"),
        unwind_root.Dir("dist/src"),
        unwind_root.Dir("dist/include"),
        unwind_root.Dir("dist/include/tdep-${TARGET_ARCH}"),
    ])

# propagates to consumers that Inject (depend on) catch2.
env.RegisterConsumerModifications(
    CPPPATH=[lib_root.Dir("dist/include")])

env.Library(
    target='catch2',
    source=[])
